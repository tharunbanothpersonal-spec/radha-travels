<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Allotted Bookings â€” Radha Travels Admin</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin-corporate.css">
  <meta name="robots" content="noindex">
</head>
<body class="rt-admin">

  <header class="site-header">
    <div class="site-header-inner">
      <div class="brand">
        <img src="/images/logo.jpg" alt="Radha Travels" class="brand-logo" />
        <div class="brand-text">
          <div class="brand-title">Radha Travels</div>
          <div class="brand-sub">Admin Dashboard</div>
        </div>
      </div>

      <nav class="top-nav">
        <a href="/admin/assign-driver" class="nav-link">Assign Driver</a>
        <a href="/admin/allotted-bookings" class="nav-link active">Allotted Bookings</a>
        <button id="openChangePwdBtn" class="nav-ghost">Change Password</button>
        <button id="logoutBtn" class="nav-ghost">Logout</button>
      </nav>
    </div>
  </header>

  <main class="container" style="max-width:1200px;margin:22px auto;">
    <div class="page-head" style="display:flex;justify-content:space-between;align-items:center">
      <div>
        <h1 class="page-title">Allotted Bookings</h1>
        <p class="muted">Bookings already assigned to drivers. Use search & export tools below.</p>
      </div>
      <div>
        <button id="refreshAllotted" class="btn ghost">ðŸ”„ Refresh</button>
        <button id="exportCsv" class="btn primary">â¬‡ Export CSV</button>
        <button id="backBtn" class="btn ghost" onclick="window.location.href='/admin/assign-driver'">Back</button>
      </div>
    </div>

    <section class="card" style="margin-top:14px">
      <div style="display:flex;gap:10px;align-items:center;margin-bottom:12px">
        <input id="allottedQ" class="form-input" placeholder="Search booking id, driver, phone, vehicle" style="flex:1"/>
        <select id="perPage" class="form-input" style="width:120px">
          <option value="20">20 / page</option>
          <option value="50">50 / page</option>
          <option value="100">100 / page</option>
        </select>
        <button id="searchAllotted" class="btn primary">Search</button>
      </div>

      <div class="table-wrap">
        <table id="allottedTable" class="table">
          <thead>
            <tr>
              <th>Booking ID</th>
              <th>Customer</th>
              <th>Phone</th>
              <th>Pickup</th>
              <th>Date / Time</th>
              <th>Driver</th>
              <th>Vehicle</th>
              <th>Allotted At</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <div class="pager" style="display:flex;justify-content:space-between;align-items:center;margin-top:12px;">
        <div id="pagerInfo" class="muted small">â€”</div>
        <div>
          <button id="prevPage" class="btn ghost">Prev</button>
          <button id="nextPage" class="btn ghost">Next</button>
        </div>
      </div>
    </section>
  </main>

  <script src="/js/admin-allotted.js" defer></script>
</body>
</html>
